.link-color
  color accentColor

.pagination
  font-family altFont
  border-top 1px solid darkColor
  border-bottom 1px solid darkColor
  padding 1rem 0
  margin 1rem 0 2rem 0
  ul
    font-size 0
    li
      font-size 1.5rem
      display inline-block
      width 33.333333%
      &:nth-of-type(2)
        text-align center
      &:nth-of-type(3)
