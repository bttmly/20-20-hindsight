    .previous-post:before
      content '« '
    .older-posts:before
      content '« '
    .next-post:after
      content ' »'
    .newer-posts:after
      content ' »'

::selection
  background desaturate(lighten(accentColor,50%), 25%)
  color #fff

// UTILITY CLASSES

.page--index
.page-type-index
  .tag-only
  .perma-only
  .only-tag-page
  .only-perma-page
  .not-index-page
    display none

    
.page--perma
.page-type-perma
  .index-only
  .tag-only
  .only-index-page
  .only-tag-page
  .not-perma-page
    display none

.page--tag
.page-type-tag
  .index-only
  .perma-only
  .only-index-page
  .only-perma-page
  .not-tag-page
    display none

  
.text-center
  text-align center
  
.text-right
  text-align right

.text-small
  font-size .75em
  
.text-regular
  font-size 1rem

.text-big
  font-size 1.25em

.text-bigger
  font-size 1.5em

// list styles
.ul-basic
  list-style-type disc
  margin-left 1rem

.ol-basic
  list-style-type decimal
  margin-left 1rem
  
// READ MORE
.toggle-read-more
.tumblr-read-more
  color accentColor
  cursor pointer
  text-decoration none
  &:hover
    text-decoration underline

.page-type-index .read-more
.page-type-tag .read-more
  display: none

p
ul
ol
h1
h2
h3
h4
h5
h6
  &:empty
    display none

.no-touch:not(.page-type-perma)
    .post-body
      cursor pointer
      padding 1rem
      &:hover 
        background #fff
        box-shadow 0 0 4px rgba(0,0,0, .25)
        .post-title
          a
            color altDark
            text-decoration underline
            position relative
        .toggle-read-more
        .tumblr-read-more
        .read-more-link
          color altAccent
          text-decoration underline
    .post-footer
      padding 0 1rem 1rem 1rem
      &:after
        width -webkit-calc(100% - 2rem)
        width calc(100% - 2rem)
        margin 0 auto

#text-title
  display none

#top-bar
  position absolute
  top 0
  left 0
  height 3rem
  width 100%
  background accentColor
  color white
  font-family condFont
  padding 0 .75rem
  .top-bar-title
    font-weight bold
    font-size 1.5rem
    line-height 3rem
    text-transform uppercase
    a
      color #fff
      text-decoration none
      &:hover
        color #ddd
  .top-bar-tagline
    display none
    padding-left 1rem

#prev-post
#next-post
  display none
  position fixed
  opacity 0
  width 4rem
  height 100vh
  top 0
  background rgba(0,0,0,.1)
  cursor pointer
  color rgba(0,0,0,.3)
  span
    display block
    text-align center
  .nav-chevron
    margin-top 4rem
    font-size 10rem
  .nav-text
    font-size .75rem
    font-family condFont
    font-weight bold
    text-transform uppercase
    
#prev-post
  left 0
  
#next-post
  right 0
      
.page-type-perma.page-width-wide
  #prev-post
  #next-post
    display block
    transition opacity .25s ease
    &:hover
      opacity 1
      
.page-type-perma .lede
  display none
  
  
// dropdown navigation

.no-js .dropdown-navigation
.no-csstransforms3d .dropdown-navigation
  display none !important

#dropdown-toggle
  margin 1rem 0 0 1rem
  width 2rem
  height 1.75rem
  padding .25rem
  cursor pointer
  z-index 1000
  transition all .5s ease-in-out
  i
    display block
    width 100%
    height .25rem
    background #333
    transform rotate(0deg)
    -webkit-transform rotate(0deg)
    transition all .5s ease-in-out
    &:not(:first-of-type)
      margin-top .25rem

.dropdown-open
  #dropdown-toggle
    i
      &:first-of-type
        transform rotate(45deg) translate3d(33%, 90%, 0)
        -webkit-transform rotate(45deg) translate3d(33%, 90%, 0)
      &:nth-of-type(2)
        opacity 0
      &:last-of-type
        transform rotate(-45deg) translate(30%, -90%)
        -webkit-transform rotate(-45deg) translate3d(30%, -90%, 0)
  .dropdown-navigation
    transform translate3d(0,0,0)
    -webkit-transform translate3d(0,0,0)
  
        
.dropdown-navigation
  position fixed
  z-index 1200
  top 0
  left 0
  width 12rem
  height 100vh
  background #333
  transition transform ease-in-out .5s
  -webkit-transition -webkit-transform ease-in-out .5s
  transform translate3d(-100%, 0, 0)
  -webkit-transform translate3d(-100%, 0, 0)
  ul
    list-style-type none
    li
      font-size 1rem
      margin 1rem


.fixed-header .field-navigation
.dropdown-open .field-navigation
  // opacity 1
  transform translate3d(0, 0, 0)
  -webkit-transform translate3d(0, 0, 0)
  z-index 2000

.page-width-narrow .field-navigation
.page-width-medium .field-navigation
  transform translate3d(0, 3rem, 0)
  -webkit-transform translate3d(0, 3rem, 0)

.field-navigation
  transition all .33s ease-in-out
  transform translate3d(0, 3rem, 0)
  -webkit-transform translate3d(0, 3rem, 0)
  // opacity 0
  width 100%
  font-size 0
  height 3rem
  position absolute
  bottom 0
  font-family altFont
  font-weight 700
  text-transform uppercase
  ul
    height 3rem
    width 100%
  li
    font-size 1rem
    line-height 3rem
    display inline-block
    width 16.6666666666%
    text-align center
    &:not(:first-of-type)
      border-left solid .125rem transparent
    &:not(:last-of-type)
      border-right solid .125rem transparent
  a
    color white
    display block
    width 100%
    transition background .2s ease
    &:hover 
      background rgba(0,0,0,.25)
      
