body
	background #f5f5f5

.posts .each-post
	margin-bottom 3rem
	&:nth-of-type(n+5)
		display none
		
.post-wrap-link
	display block
	// change to text color variable
	color black
	text-decoration none
	padding 1.5rem
	&:hover
		background #fff
		color black
		box-shadow 0 0 4px rgba(0,0,0,.25)

.post-list-title
	// change to sans font variable
	font-family sans-serif
	font-weight bold